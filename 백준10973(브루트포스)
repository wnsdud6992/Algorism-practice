--이전 순열-- 다음순열 반대
다음순열과 거의 유사한 형태로 오름차순이면 넘어가고 내림차순이면 교환하는 형식으로 바뀌었을 뿐이다.


#include <stdio.h>
void swap(int* a, int* b) {
	int temp = *b;
	*b = *a;
	*a = temp;
}

int arr[10000];

int main() {
	int n, i, j = 0, tmp = 0, k = 0,flag=0;
	scanf("%d", &n);
	for (i = 0; i < n; i++) {
		scanf("%d", &arr[i]);
	}
	if (n == 1) {
		flag++;
	}
	else {
		for (i = n - 2; i >= 0; i--) {
			if (i == 0 && arr[i] <= arr[i + 1]) flag++;
			else if (arr[i] <= arr[i + 1]) continue;

			else if (arr[i] > arr[i + 1]) {
				for (int a = n - 1; a >= i + 1; a--) {
					if (arr[i] > arr[a]) {
						swap(&arr[i], &arr[a]);
						break;
					}
				}
				k = n - 1;
				j = i + 1;
				while (j <= k) {
					swap(&arr[j], &arr[k]);
					j++, k--;
				}
				break;
			}
		}
	}
	
	if (flag == 0) {
		for (i = 0; i < n; i++) {
			printf("%d ", arr[i]);
		}
	}
	else printf("-1");
	
	
}
